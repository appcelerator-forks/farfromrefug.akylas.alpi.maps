{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "classic",
        "module": "commonjs",
        "preserveConstEnums": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "allowJs": true,
        "noLib": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "build/ts"
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
